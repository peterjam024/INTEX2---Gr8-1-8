<h1>Please fill out your information here!</h1>

<div>
    <form>

        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="CRASH_ID" />
        <br />

        <label asp-for="CRASH_DATETIME">Crash Date:</label>
        <input type="datetime-local" />
        <br />

        <label asp-for="CRASH_SEVERITY_ID">Crash Severity:</label>
        <select asp-for="CRASH_SEVERITY_ID">
            <option value="1">No Injury</option>
            <option value="2">Possible Injury</option>
            <option value="3">Suspected Minor Injury</option>
            <option value="4">Suspected Serious Injury</option>
            <option value="5">Fatal</option>

        </select>
        <br />
        <div class="accordion" id="accordionExample">
            <div class="card">
                <div class="card-header" id="headingTwo">
                    <h5 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            General Information
                        </button>
                    </h5>
                </div>
                <div id="collapseTwo" class="collapse show" aria-labelledby="headingTwo" data-parent="#accordionExample">
                    <div class="card-body">

                    </div>
                </div>
            </div>


            <div class="card">
                <div class="card-header" id="headingOne">
                    <h5 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Location Information
                        </button>
                    </h5>
                </div>
                <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                    <div class="card-body">

                        <div class="form-group">
                            <div class="form-group col-md-4">
                                <div>
                                    <label asp-for="MAIN_ROAD_NAME">Street:</label>
                                    <input class="form-control" asp-for="MAIN_ROAD_NAME" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="form-group col-md-4">
                                <label asp-for="CITY">City</label>
                                <select class="form-control" id="inputCity" asp-for="CITY">
                                    <option></option>
                                    @foreach (var city in ViewBag.cities)
                                    {
                                        <option>@city</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="form-group col-md-4">
                                <label asp-for="COUNTY_NAME">County</label>
                                <select class="form-control" id="inputCounty" asp-for="COUNTY_NAME">
                                    <option></option>
                                    @foreach (var county in ViewBag.counties)
                                    {
                                        <option>@county</option>
                                    }
                                </select>


                            </div>
                        </div>
                    </div>
                </div>


                <div class="card">
                    <div class="card-header" id="headingThree">
                        <h5 class="mb-0">
                            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Additional Information
                            </button>
                        </h5>
                    </div>
                    <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                        <div class="card-body">
                            <label asp-for="WORK_ZONE_RELATED">In a work zone:</label>
                            <div class="form-check">
                                @Html.RadioButtonFor(model => model.WORK_ZONE_RELATED, true) Yes
                            </div>
                            <div class="form-check">
                                @Html.RadioButtonFor(model => model.WORK_ZONE_RELATED, false) No
                            </div>
                            <br />

                            <label asp-for="PEDESTRIAN_INVOLVED">Pedestrian Involved:</label>
                            

                            <label asp-for="BICYCLIST_INVOLVED">Bicyclist Involved:</label>
                            <select asp-for="BICYCLIST_INVOLVED">
                                <option value="true">True</option>
                                <option value="False">False</option>
                            </select>
                            <br />

                            <label asp-for="MOTORCYCLE_INVOLVED">Motorcycle Involved:</label>
                            <select asp-for="MOTORCYCLE_INVOLVED">
                                <option value="True">True</option>
                                <option value="False">False</option>
                            </select>
                            <br />

                            <label asp-for="COMMERCIAL_MOTOR_VEH_INVOLVED">Commercial Vehicle Involved:</label>
                            <select asp-for="COMMERCIAL_MOTOR_VEH_INVOLVED">
                                <option value="True">True</option>
                                <option value="False">False</option>
                            </select>
                            <br />

                            <label asp-for="IMPROPER_RESTRAINT">Improper Restraint:</label>
                            <select asp-for="IMPROPER_RESTRAINT">
                                <option value="True">True</option>
                                <option value="False">False</option>
                            </select>
                            <br />

                            <label asp-for="UNRESTRAINED">Unrestrained:</label>
                            <select asp-for="UNRESTRAINED">
                                <option value="True">True</option>
                                <option value="False">False</option>
                            </select>
                            <br />

                            <label asp-for="DUI">DUI:</label>
                            <select asp-for="DUI">
                                <option value="True">True</option>
                                <option value="False">False</option>
                            </select>
                            <br />

                            <label asp-for="INTERSECTION_RELATED">Intersection:</label>
                            <select asp-for="INTERSECTION_RELATED">
                                <option value="True">True</option>
                                <option value="False">False</option>
                            </select>
                            <br />

                            <label asp-for="WILD_ANIMAL_RELATED">Wild Animal Related:</label>
                            <select asp-for="WILD_ANIMAL_RELATED">
                                <option value="True">True</option>
                                <option value="False">False</option>
                            </select>
                            <br />

                            <label asp-for="DOMESTIC_ANIMAL_RELATED">Domestic Animal Related:</label>
                            <select asp-for="DOMESTIC_ANIMAL_RELATED">
                                <option value="1">True</option>
                                <option value="0">False</option>
                            </select>
                            <br />

                            <label asp-for="OVERTURN_ROLLOVER">Vehicle Rollover:</label>
                            <select asp-for="OVERTURN_ROLLOVER">
                                <option value="1">True</option>
                                <option value="0">False</option>
                            </select>
                            <br />

                            <label asp-for="TEENAGE_DRIVER_INVOLVED">Teenage Driver Involved:</label>
                            <select asp-for="TEENAGE_DRIVER_INVOLVED">
                                <option value="1">True</option>
                                <option value="0">False</option>
                            </select>
                            <br />

                            <label asp-for="OLDER_DRIVER_INVOLVED">Older Driver Involved:</label>
                            <select asp-for="OLDER_DRIVER_INVOLVED">
                                <option value="1">True</option>
                                <option value="0">False</option>
                            </select>
                            <br />

                            <label asp-for="NIGHT_DARK_CONDITION">Dark Conditions:</label>
                            <select asp-for="NIGHT_DARK_CONDITION">
                                <option value="1">True</option>
                                <option value="0">False</option>
                            </select>
                            <br />

                            <label asp-for="SINGLE_VEHICLE">Single Vehicle:</label>
                            <select asp-for="SINGLE_VEHICLE">
                                <option value="1">True</option>
                                <option value="0">False</option>
                            </select>
                            <br />

                            <label asp-for="DISTRACTED_DRIVING">Distracted Driving:</label>
                            <select asp-for="DISTRACTED_DRIVING">
                                <option value="1">True</option>
                                <option value="0">False</option>
                            </select>
                            <br />

                            <label asp-for="DROWSY_DRIVING">Drowsy Driving:</label>
                            <select asp-for="DROWSY_DRIVING">
                                <option value="1">True</option>
                                <option value="0">False</option>
                            </select>
                            <br />

                            <label asp-for="ROADWAY_DEPARTURE">Left the Road:</label>
                            <select asp-for="ROADWAY_DEPARTURE">
                                <option value="1">True</option>
                                <option value="0">False</option>
                            </select>
                            <br />
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <br />
        <button class="btn btn-success" type="submit">Submit</button>
    </form>
    </div>