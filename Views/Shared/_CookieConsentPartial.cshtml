
@{

}

@using Microsoft.AspNetCore.Http.Features

@{
    var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
    var showBanner = !consentFeature?.CanTrack ?? false;
    var cookieString = consentFeature?.CreateConsentCookie();
}

@if (showBanner)
{

<div id="cookieConsent" class="alert alert-info alert-dismissible fade show" role="alert">

    @*        This website uses cookies. If you would like to learn more, please click. <a asp-page="/Privacy">Learn More</a>.
    *@
    By clicking Accept, you are agreeing to our Privacy Policy. <a asp-controller="Home" asp-action="Privacy">Learn More</a>.

    <button type="button" class="accept-policy close" data-dismiss="alert" aria-label="Close" data-cookie-string="@cookieString">
        <span aria-hidden="true">Accept</span>
    </button>


    <!-- Button to trigger modal -->
    <a class="btn btn-sm btn-success" data-toggle="modal" data-target="#exampleModalCenter"> TEST</a>

    <div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
@*                        <h5 class="modal-title" id="exampleModalCenterTitle">Unsubsrcibe</h5>
*@                        <button id="exampleModalCenterTitle" type="button" class="accept-policy close" data-dismiss="alert" aria-label="Close" data-cookie-string="@cookieString">
                            <span aria-hidden="true">Accept</span>
                          </button>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Are you sure you no longer wish to be contacted?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="PrivacyUnsubscribe">Accept</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
    
    <script src="~/js/Notification.js"></script>
}